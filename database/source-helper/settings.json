{
  "editor.cursorStyle": "block",
  "editor.definitionLinkOpensInPeek": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLinesStyle": "default",
  "prettier.endOfLine": "auto",
  "prettier.useEditorConfig": false,
  "prettier.requirePragma": false,
  // "intelephense.environment.documentRoot": "../project",
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedProperties": false,
  "intelephense.diagnostics.undefinedVariables": true,
  "intelephense.environment.includePaths": [
    "./vendor/barryvdh/laravel-ide-helper",
    "./vendor/laravel/framework/src/Illuminate"
  ],
  "intelephense.diagnostics.enable": true,
  "intelephense.completion.classMemberSnippets": true,
  "intelephense.trace.server": "verbose",
  "intelephense.files.associations": ["**/*.php"],
  "editor.minimap.autohide": true,
  "editor.minimap.scale": 1,
  "editor.minimap.renderCharacters": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.blade.php": "blade"
  },
  "emmet.includeLanguages": {
    "blade": "html"
  },
  "blade.format.enable": true,
  "blade.format.wrapLineLength": 260,
  "blade.customDirectives": [
    "@append",
    "@auth",
    "@aware",
    "@break",
    "@can",
    "@canany",
    "@cannot",
    "@case",
    "@checked",
    "@choice",
    "@class",
    "@component",
    "@componentfirst",
    "@continue",
    "@csrf",
    "@dd",
    "@default",
    "@disabled",
    "@dump",
    "@each",
    "@else",
    "@elseauth",
    "@elsecan",
    "@elsecanany",
    "@elsecannot",
    "@elseguest",
    "@elseif",
    "@empty",
    "@endauth",
    "@endcan",
    "@endcanany",
    "@endcannot",
    "@endcomponent",
    "@endcomponentClass",
    "@endcomponentfirst",
    "@endempty",
    "@endenv",
    "@enderror",
    "@endfor",
    "@endforeach",
    "@endforelse",
    "@endfragment",
    "@endguest",
    "@endif",
    "@endisset",
    "@endlang",
    "@endonce",
    "@endphp",
    "@endprepend",
    "@endproduction",
    "@endpush",
    "@endrole",
    "@endsection",
    "@endsession",
    "@endslot",
    "@endswitch",
    "@endunless",
    "@endverbatim",
    "@endwhile",
    "@env",
    "@error",
    "@extends",
    "@extendsfirst",
    "@for",
    "@foreach",
    "@forelse",
    "@fragment",
    "@guest",
    "@hasSection"
  ]

}
